  <tbody>
    <% @workshops.order(:title).each_with_index do |workshop, index| %>

      <tr class=" ">
        <td><%= workshop.title %></td>
        <td><%= workshop.description %></td>
        <td><%= workshop.date %></td>
        <td><%= workshop.time %></td>
        <td><%= workshop.category %></td>
        <td><%= workshop.price %></td>
        <td><%= workshop.total %></td>
        <td>
