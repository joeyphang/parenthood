<%= form_with model: [@workshop, @booking] do |b| %>
	<%= b.label :No_pax %> :
	<%= b.number_field :total %> <br/>

	<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @workshop.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @workshop.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @workshop.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @workshop.time %>
</p>

<p>
  <strong>Category:</strong>
  <%= @workshop.category %>
</p>

<p>
  <strong>Price:</strong>
  <%= @workshop.price %>
</p>

<p>
  <strong>Total:</strong>
  <%= @workshop.total %>
</p>

<p>
  <strong>Avatar:</strong>
    <% if @workshop.avatar != nil %>
    <% @workshop.avatar.each do |img| %>
    <%= image_tag img.url, :class => "img-fluid" %>
    <% end %>
  <% end %>
</p>

	<%= b.submit %>

	<% end %>